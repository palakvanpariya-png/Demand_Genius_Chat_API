# ===================================
# ENVIRONMENT SELECTION
# ===================================
ENVIRONMENT=STAGE

# ===================================
# DATABASE CONFIGURATION
# ===================================
# MongoDB connection  cluster)
MONGODB_URI=your-mongodb-uri
DATABASE_NAME=demand-genius-prod

# ===================================
# OPENAI CONFIGURATION
# ===================================
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.0

# ===================================
# JWT CONFIGURATION
# ===================================
JWT_SECRET_KEY=your-strong-jwt-secret-key
JWT_ALGORITHM=HS256
SECRET_KEY=your-app-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================================
# REDIS CONFIGURATION (OPTIONAL)
# ===================================
# Use Redis for caching and session management
# REDIS_URL=redis://your-redis-host:6379
# REDIS_TTL_HOURS=24

# ===================================
# SERVER CONFIGURATION
# ===================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false  # Must be false in

# ===================================
# LOGGING
# ===================================
LOG_LEVEL=WARNING  # INFO or DEBUG can expose sensitive info

# ===================================
# QUERY PROCESSING
# ===================================
MAX_QUERY_LENGTH=1000
MAX_SCHEMA_VALUES=5000
DEFAULT_PAGE_SIZE=200
MAX_PAGE_SIZE=1000

# ===================================
# SESSION MANAGEMENT
# ===================================
MAX_SESSION_INTERACTIONS=10
SESSION_CLEANUP_INTERVAL=3600

# ===================================
# RATE LIMITING
# ===================================
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# ===================================
# POSTGRESQL CONFIGURATION (pgvector)
# ===================================
POSTGRES_HOST=your-db-host     
POSTGRES_PORT=5432
POSTGRES_DB=demand_genius
POSTGRES_USER=user
POSTGRES_PASSWORD=your-password
POSTGRES_SSL_MODE=require                  

# ===================================
# VECTOR SEARCH CONFIGURATION
# ===================================
VECTOR_SEARCH_ENABLED=true
VECTOR_SIMILARITY_THRESHOLD=0.75
EMBEDDING_MODEL=text-embedding-ada-002

# ===================================
# DEVOPS / SECURITY NOTES
# ===================================
# - Ensure all DB and Redis ports are firewalled and accessible only from your app server.
# - Store sensitive secrets (API keys, DB passwords) in a secret manager (e.g., AWS Secrets Manager, GitHub Secrets, Vault).
# - Never commit this file to GitHub. Commit a .env.example template instead.
# - Use HTTPS / SSL for all external connections.
